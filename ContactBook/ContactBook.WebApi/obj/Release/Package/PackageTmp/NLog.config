<?xml version="1.0" encoding="utf-8" ?>

<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <targets>

    <target name="asyncDb" xsi:type="AsyncWrapper">
      <target xsi:type="RetryingWrapper">
        <target name="database" xsi:type="Database">
          <commandText>
            INSERT INTO CB_Log(Level,Logger,Message,MachineName, UserName, CallSite, Thread, Exception, Stacktrace, Application) VALUES (@level, @logger, @message,@machinename, @user_name, @call_site, @threadid, @log_exception, @stacktrace, @application);
          </commandText>
          <parameter name="@level" layout="${level}"/>
          <parameter name="@logger" layout="${logger}"/>
          <parameter name="@message" layout="${message}"/>
          <parameter name="@machinename" layout="${machinename}"/>
          <parameter name="@user_name" layout="${windows-identity:domain=true}"/>
          <parameter name="@call_site" layout="${callsite:filename=true}"/>
          <parameter name="@threadid" layout="${threadid}"/>
          <parameter name="@log_exception" layout="${exception}"/>
          <parameter name="@stacktrace" layout="${stacktrace}"/>
          <parameter name="@application" layout="${gdc:item=ApplicationName}" />
          <dbProvider>System.Data.SqlClient</dbProvider>
          <connectionString>Server=tcp:lwn0o0exea.database.windows.net,1433;Database=ContactBook;User ID=axkhan2@lwn0o0exea;Password=@ndheri788;Trusted_Connection=False;Encrypt=True;Connection Timeout=30;</connectionString>
        </target>
      </target>
    </target>
  </targets>
  <rules>
    <logger name="*" minlevel="Error" appendTo="asyncDb"></logger>
  </rules>
</nlog>